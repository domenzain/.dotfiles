[alias]
	st = status
	rha = reset --hard

	l = log --pretty=oneline --abbrev-commit
	ll = log --color --graph --pretty=format:'%C(auto)%h %d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lg = log --color --graph --pretty=format:'%C(auto)%h %d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lll = log --color --graph --pretty=format:'%C(auto)%h %d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%n' --abbrev-commit --stat
[push]
	default = simple
[merge]
	ff = yes
	tool = vimdiff
	conflictStyle = diff3
[mergetool]
	prompt = false
[core]
	autocrlf = input
[color]
	ui = auto
[diff]
	tool = vimdiff
	conflictstyle = diff3
	algorithm = patience
[rerere]
	enabled = true
[include]
	path = ~/.gitlocal
[magithub]
	online = false
[magithub "status"]
	includeStatusHeader = false
	includePullRequestsSection = false
	includeIssuesSection = false
[pull]
	rebase = true
[sumbodule]
	stickyRecursiveClone = true
[init]
	defaultBranch = main
[rebase]
	autoStash = true
	updateRefs = true
[submodule]
	stickyRecursiveClone = true
	recurse = true
	fetchJobs = 0
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[advice]
	skippedCherryPicks = false
